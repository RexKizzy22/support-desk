{
  "name": "support-desk",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "start": "node ./dist/index.js",
    "start:dev": "concurrently \"pnpm dev\" \"pnpm dev --prefix client\" ",
    "dev": "nodemon",
    "dev:client": "pnpm dev --prefix client",
    "lint": "eslint . --ext .ts",
    "test": "nodemon --config ./spec/nodemon.json",
    "test:no-reloading": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./spec",
    "heroku-postbuild": "cd client && pnpm install"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "events": {
      "restart": "",
      "start": "",
      "crash": "exit 1"
    },
    "exec": "rm -rf ./dist && tsc -p ./tsconfig.json && ./node_modules/.bin/ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@services": "dist/services",
    "@repos": "dist/repos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/server",
    "@routes": "dist/routes"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "eslintIgnore": [
    "src/public/",
    "build.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RexKizzy22/support-desk.git"
  },
  "keywords": [],
  "author": "Kizito Inegbenose <kizitoinegbenose@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RexKizzy22/support-desk/issues"
  },
  "homepage": "https://github.com/RexKizzy22/support-desk#readme",
  "devDependencies": {
    "@types/nodemon": "^1.19.1",
    "concurrently": "^7.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/command-line-args": "^5.2.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jasmine": "^4.0.2",
    "@types/jsonfile": "^6.1.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@types/cors": "^2.8.12",
    "eslint": "^8.12.0",
    "jasmine": "^4.0.2",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "colors": "1.4.0",
    "tsconfig-paths": "^3.14.1",
    "find": "^0.3.0",
    "typescript": "^4.6.3",
    "ts-node": "^10.7.0"
  },
  "dependencies": {
    "fs-extra": "^10.0.1",
    "express-async-handler": "^1.2.0",
    "bcrypt": "^5.0.1",
    "command-line-args": "^5.2.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.2.0",
    "jet-logger": "^1.1.5",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.2.10",
    "morgan": "^1.10.0"
  }
}
